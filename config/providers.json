{
  "providers": {
    "codex": {
      "name": "Codex (GPT)",
      "description": "OpenAI GPT models via Codex CLI - strategic advisor for complex problems",
      "cli": "codex",
      "install": "npm install -g @openai/codex",
      "auth": "codex login",
      "mcp": {
        "type": "stdio",
        "command": "codex",
        "args": ["-m", "gpt-5.2-codex", "mcp-server"]
      },
      "roles": ["worker", "oracle", "momus"],
      "strengths": ["architecture", "debugging-escalation", "code-review", "security", "tradeoff-analysis"],
      "avoid": ["simple-operations", "trivial-decisions", "research", "frontend-generation"]
    }
  }
}
